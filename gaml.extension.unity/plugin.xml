<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="gaml.extension">
   </extension>
   <extension
         id="UnityVR"
         name="Unity VR"
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="Unity VR">
            <command
                  commandId="gaml.extension.unity.GenerateVRModel"
                  label="Model to VR"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <reference
                        definitionId="isGamlEditorOpened">
                  </reference>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="gaml.extension.unity.commands.GenerateVrModelHandler"
            id="gaml.extension.unity.GenerateVRModel"
            name="Generate VR Model">
      </command>
   </extension>

</plugin>
